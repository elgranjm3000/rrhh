{% extends 'administrador.html.twig' %}



{% block body %}

<div class="row">
      <ol class="breadcrumb">
        <li><a href="#">
          <em class="fa fa-home"></em>
        </a></li>
        <li class="active">Usuarios</li>
      </ol>
    </div><!--/.row-->
    
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">Crear Usuarios</h1>
      </div>
    </div><!--/.row-->

<div class="row">
<div class="col-md-9">
<div class="panel panel-default">
<div class="panel-body">
	{{ form_start(form , { 'attr': {'role': 'form','novalidate':'novalidate', 'class':'form-horizontal'} }) }}
    

     {{ form_row(form.username,{'label':'Username','attr': {'class': 'form-control','placeholder':'Username', 'title': 'Escriba su username'} } ) }}

	{{ form_row(form.email,{'label':'Correo electronico','attr': {'class': 'form-control','placeholder':'Email', 'title': 'Escriba su Email'} } ) }}



	{{ form_row(form.plainPassword.first,{'label':'Clave','attr': {'class': 'form-control','placeholder':'Password', 'title': 'Escriba su Contraseña'} } ) }}

	{{ form_row(form.plainPassword.second,{'label':'Re-Clave','attr': {'class': 'form-control','placeholder':'Re-Password', 'title': 'Escriba su Contraseña nuevamente'} } ) }}
    


    {{ form_row(form.roles,{'label':'Seleccione su rol','attr': {'class': 'form-control','placeholder':'Roles', 'title': 'Seleccione al menos un rol'} } ) }}


    <button type="submit" class="btn btn-sm btn-success btn-md pull-right">Registrar</button>
	{{ form_end(form) }}
	</div>
	</div>
</div>
</div>

{% endblock %}
